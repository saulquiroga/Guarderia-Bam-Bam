<!DOCTYPE html>
<html>
<head>

    <title>@Page.Title</title>

</head>
<body>


    @if (IsSectionDefined("header"))
    {
        <div id="header_alt">
            @RenderSection("header")
        </div>
    }
    else
    {
        @RenderPage("~/Shared/_Header.cshtml")
    }
    <div id="slider">
        @RenderPage("~/Shared/_Recuerdos.cshtml")
    </div>
    <div id="info">
        @RenderPage("~/Shared/_Infodir.cshtml")
    </div>
    <div id="copy">
        @RenderPage("~/Shared/_Copy.cshtml")
    </div>


    <h1>@PageData["titulo"]</h1>
    @RenderBody()

</body>
</html>